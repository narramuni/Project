@model ASP_MVC_UI.Customer

@{
    ViewBag.Title = "ResetPassword";
}

<style>
    h4 {
        border-radius: 6px;
        margin: 0;
        padding: 10px;
        font-weight: bold;
        color: tomato;
    }

    body {
        background-image: url('/Pictures/HomePageBgImg.jpg');
        background-size: cover;
        background-position: center;
    }

    .form-horizontal {
        font-size: 15px;
        width: 600px;
        height: 450px;
        background-color: white;
        color: black;
        box-sizing: border-box;
        border-radius: 10px;
        font-weight: bold;
        margin: auto;
        margin-top: 50px;
        display: flex;
        flex-direction: column;
        justify-content: center;
        align-items: center;
    }

    .form-group {
        display: flex;
        flex-direction: row;
        align-items: center;
        margin-bottom: 15px;
    }

        .form-group label {
            width: 200px; /* Adjust the width as needed */
            margin-right: 10px;
            font-weight: bold;
        }

        .form-group .col-md-10 {
            flex: 1;
        }

    .btn-default {
        padding: 8px 10px;
        border: none;
        margin-top: 4px;
        font-family: 'Times New Roman', Times, serif;
        font-weight: bold;
        font-size: 20px;
        background-color: tomato;
        border-radius: 3px 4px;
        color: white;
        cursor: pointer;
    }
</style>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()


    <p style="color: red;">@TempData["Message"]</p>

    <div class="form-horizontal">
        <br />
        <h4>Reset Password</h4>
        <hr />
        <br />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })

        <div class="form-group">
            <label for="CustEmail">Enter your Email:</label>
            <div class="col-md-10">
                @Html.EditorFor(model => model.CustEmail, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.CustEmail, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <label for="CustPhone">Enter your Phone No:</label>
            <div class="col-md-10">
                @Html.EditorFor(model => model.CustPhone, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.CustPhone, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Reset My Password" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>
