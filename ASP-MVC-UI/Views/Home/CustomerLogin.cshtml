@model ASP_MVC_UI.Customer

@{
    ViewBag.Title = "CustomerLogin";
}

<h2>CustomerLogin</h2>
<br />

<style>
    h2 {
        text-align: center;
        color: white;
        text-underline-offset: auto;
        background-color: tomato;
    }

    h4 {
        border-radius: 6px;
        margin: 0;
        padding: 10px;
        font-weight: bold;
        color: tomato;
    }

    body {
        background-image: url('/Pictures/pexels-photo-1640773.jpeg');
        background-size: cover;
        background-position: center;
    }

    .form-horizontal {
        font-size: 15px;
        align-content: center;
        width: 600px;
        height: 450px;
        background-color: white;
        color: black;
        box-sizing: border-box;
        border-radius: 10px;
        font-weight: bold;
    }

    .button1 {
        padding: 8px 10px;
        border: none;
        margin-top: 4px;
        font-family: 'Times New Roman', Times, serif;
        font-weight: bold;
        font-size: 20px;
        align-content: center;
        background-color: tomato;
        border-radius: 3px 4px;
        color: white;
        cursor: pointer;
    }

    .button2 {
        padding: 8px 10px;
        border: none;
        margin-top: 4px;
        font-family: 'Times New Roman', Times, serif;
        font-weight: bold;
        font-size: 20px;
        align-content: center;
        background-color: darkred;
        border-radius: 3px 4px;
        color: black;
        cursor: pointer;
    }

    .btn-warning {
        color: #fff;
        background-color: tomato;
        border-color: tomato;
        padding: 10px 20px;
        text-decoration: none;
        display: inline-block;
        border-radius: 5px;
        transition: background-color 0.3s;
        margin-bottom: 100px;
    }

        .btn-warning:hover {
            background-color: tomato;
            border-color: #d58512;
        }
</style>

<center>
    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="form-horizontal">
            <br />
            <h4>Login</h4>
            <hr />
            <br />
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })

            <div class="form-group" style="margin-bottom: 20px;">
                @Html.LabelFor(model => model.CustEmail, "Enter Your Email Address", htmlAttributes: new { @class = "control-label" })
                <div>
                    @Html.EditorFor(model => model.CustEmail, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.CustEmail, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group" style="margin-bottom: 20px;">
                @Html.LabelFor(model => model.CustPassword, "Enter Your Password", htmlAttributes: new { @class = "control-label" })
                <div>
                    @Html.EditorFor(model => model.CustPassword, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.CustPassword, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group" style="margin-bottom: 20px;">
                <div class="col-md-offset-2 col-md-10">
                    <button class="button1">Login</button>
                </div>
            </div>
            <br />
            <br />

            <div class="form-group">
                @Html.ActionLink("Forgot Password", "ForgotPassword", "Home", null, new { @class = "button1" })
            </div>
        </div>
    }

    <br />
    <div>
        @Html.ActionLink("Back To Home", "Index", null, new { @class = "btn btn-warning" })
    </div>

</center>