@model Customer

@{
    ViewBag.Title = "Edit Profile";
}

<h2>Edit Profile</h2>

<style>
    h2 {
        color: tomato;
        text-underline-offset: auto;
    }

    h4 {
        border-radius: 6px;
        margin: 0;
        padding: 10px;
        font-weight: bold;
        color: tomato;
    }

    body {
        background-image: url('/Pictures/AdminLoginBgImg1.jpg');
        background-size: cover;
        background-position: center;
    }

    .form-horizontal {
        font-size: 12px;
        align-content: center;
        width: 600px;
        height: 600px;
        background-color: white;
        color: black;
        box-sizing: border-box;
        border-radius: 10px;
        font-weight: bold;
    }

    .button1 {
        padding: 8px 10px;
        border: none;
        margin-top: 4px;
        font-family: 'Times New Roman', Times, serif;
        font-weight: bold;
        font-size: 20px;
        align-content: center;
        background-color: tomato;
        border-radius: 3px 4px;
        color: white;
        cursor: pointer;
    }
</style>

<center>
    @using (Html.BeginForm("UpdateProfile", "CustomerMenus", FormMethod.Post))
    {
        @Html.AntiForgeryToken()

        <div class="form-group">
            @Html.LabelFor(model => model.CustEmail, "Your Email")
            @Html.TextBoxFor(model => model.CustEmail, new { @class = "form-control", placeholder = " your email" })
            @Html.ValidationMessageFor(model => model.CustEmail, "", new { @class = "text-danger" })
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.CustPhone, "Your Phone")
            @Html.TextBoxFor(model => model.CustPhone, new { @class = "form-control", placeholder = " your phone number" })
            @Html.ValidationMessageFor(model => model.CustPhone, "", new { @class = "text-danger" })
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.CustFName, "Your First Name")
            @Html.TextBoxFor(model => model.CustFName, new { @class = "form-control", placeholder = " your first name" })
            @Html.ValidationMessageFor(model => model.CustFName, "", new { @class = "text-danger" })
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.CustLName, "Your Last Name")
            @Html.TextBoxFor(model => model.CustLName, new { @class = "form-control", placeholder = " your last name" })
            @Html.ValidationMessageFor(model => model.CustLName, "", new { @class = "text-danger" })
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.CustPassword, "Your Password")
            @Html.PasswordFor(model => model.CustPassword, new { @class = "form-control", placeholder = "Enter your password" })
            @Html.ValidationMessageFor(model => model.CustPassword, "", new { @class = "text-danger" })
        </div>
        <br />
        <br />
        <button type="submit" class="btn btn-primary">Update Profile</button>
        <br />
        <br />
        <div class="text-right">
            @Html.ActionLink("Go back", "Index", "CustomerMenus", null, new { @class = "btn btn-primary" })
        </div>
    }

    @section Scripts {
        @Scripts.Render("~/bundles/jqueryval")
    }
</center>