@model Address

@{
    Layout = "~/Views/Shared/_CustomerLayout.cshtml";
    ViewBag.Title = "Add Address";
}


<h2>Add Your Address</h2>
<style>

    body {
        background-image: url('/Pictures/AdminLoginBgImg1.jpg');
        background-size: cover;
        background-position: center;
    }

    h2, h4 {
        color: tomato;
        margin: 0px;
    }

    .table {
        font-size: 15px;
        align-content: center;
        width: 600px;
        height: 380px;
        background-color: white;
        color: black;
        box-sizing: border-box;
        border-radius: 10px;
        font-weight: bold;
    }

    .btn-primary {
        background-color: tomato;
        border-color: tomato;
    }

        .btn-primary:hover {
            background-color: tomato;
            border-color: tomato;
        }

</style>

<center>

    

    @using (Html.BeginForm("SaveAddress", "CustomerMenus", FormMethod.Post))
    {
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })

    <div class="table">

        <h4>Your food will be at your door!</h4>
        <hr />
        <p style="color: red;">@TempData["Message"]</p>


        <div class="form-group">
            @Html.LabelFor(model => model.MobileNo, "Please enter your Mobile Number")
            @Html.TextBoxFor(model => model.MobileNo, new { @class = "form-control", placeholder = "eg-> 9876543210" })
            @Html.ValidationMessageFor(model => model.MobileNo, "", new { @class = "text-danger" })
        </div>
        <br />

        <div class="form-group">
            @Html.LabelFor(model => model.AddAddress, "Add your Address")
            @Html.TextAreaFor(model => model.AddAddress, new { @class = "form-control", placeholder = "Enter your full address here" })
        </div>
        <br />

        <button type="submit" class="btn btn-primary">Save Address</button>
        <br />
        <br />
        <div class="text-right">
            @Html.ActionLink("Go back to Orders", "Orders", "CustomerMenus", null, new { @class = "btn btn-primary" })
        </div>
    </div>
    }
</center>