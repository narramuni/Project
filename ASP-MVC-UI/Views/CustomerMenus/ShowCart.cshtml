@model List<Cart>

@{
    Layout = "~/Views/Shared/_CustomerLayout.cshtml";
    ViewBag.Title = "Shopping Cart";
}

<h2>Your Shopping Cart</h2>

<style>

    h2 {
        color: tomato;
    }

    p {
        font-size: 18px;
        color: black;
    }

    body {
        background-image: url('/Pictures/AdminLoginBgImg1.jpg');
        background-size: cover;
        background-position: center;
    }

    .btn-primary {
        background-color: tomato;
        border-color: tomato;
    }

        .btn-primary:hover {
            background-color: tomato;
            border-color: tomato;
        }

    /* Add shadow effect on hover for table rows */
    table tr:hover {
        box-shadow: 0 0 10px rgba(0, 0, 0, 0.5);
    }

</style>

@if (Model.Count > 0)
{
    <table class="table">
        <tr>
            <th>Food Name</th>
            <th>Quantity</th>
            <th>Unit Price</th>
            <th>Total Price</th>


        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>@item.CartFoodName</td>
                <td>@item.CartFoodQty</td>
                <td>@item.CartFoodPrice</td>
                <td>@(item.CartFoodQty * item.CartFoodPrice)</td>
                <td>@Html.ActionLink("Remove", "Delete", "Carts", new { id = item.CartId }, new { @class = "btn btn-primary" })</td>
                <!-- Add other cells as needed -->
            </tr>

        }
    </table>



    <center>

        <div class="text-right">
            @Html.ActionLink("continue", "Orders", "CustomerMenus", null, new { @class = "btn btn-primary" })
        </div>
        <br />
        <br />

        <div class="text-right">
            @Html.ActionLink("Shop More", "Index", "CustomerMenus", null, new { @class = "btn btn-primary" })
        </div>
    </center>
}
else
{
    <center>
        <p>Oops! Your shopping cart is empty.</p>
    </center>

    @Html.ActionLink("shop now", "Index", null, new { @class = "btn btn-primary" })

}



