@model IEnumerable<ASP_MVC_UI.Cart>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title</title>

    <style>
        h2 {
            color: tomato;
        }

        p {
            font-size: 18px;
            color: black;
        }

        body {
            background-image: url('/Pictures/AdminLoginBgImg1.jpg');
            background-size: cover;
            background-position: center;
        }

        .btn-primary {
            background-color: tomato;
            border-color: tomato;
        }

            .btn-primary:hover {
                background-color: tomato;
                border-color: tomato;
            }

        /* Add shadow effect on hover for table rows */
        table tr:hover {
            box-shadow: 0 0 10px rgba(0, 0, 0, 0.5);
        }

        .btn-warning {
            color: #fff;
            background-color: tomato;
            border-color: tomato;
            padding: 10px 20px;
            text-decoration: none;
            display: inline-block;
            border-radius: 5px;
            transition: background-color 0.3s;
        }

            .btn-warning:hover {
                background-color: #ec971f;
                border-color: #d58512;
            }

    </style>

</head>
<body>

    <h2>Index</h2>

    <table class="table">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.CartFoodName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CartFoodQty)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CartFoodPrice)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CartFoodImage)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Food.FoodName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Customer.CustEmail)
            </th>
            <th></th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.CartFoodName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.CartFoodQty)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.CartFoodPrice)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.CartFoodImage)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Food.FoodName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Customer.CustEmail)
                </td>
            </tr>
        }

    </table>
</body>

<div>
    @Html.ActionLink("Back to Admin Index", "Index", "AdminModule", null, new { @class = "btn btn-warning" })
</div>

</html>