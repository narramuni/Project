@model ASP_MVC_UI.Admin

@{
    ViewBag.Title = "Edit Profile";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h2>Edit Profile</h2>

<style>
    h2 {
        color: tomato;
        text-underline-offset: auto;
    }

    h4 {
        border-radius: 6px;
        margin: 0;
        padding: 10px;
        font-weight: bold;
        color: tomato;
    }

    body {
        background-image: url('/Pictures/AdminLoginBgImg1.jpg');
        background-size: cover;
        background-position: center;
    }


    .form-horizontal {
        font-size: 12px;
        align-content: center;
        width: 600px;
        height: 600px;
        background-color: white;
        color: black;
        box-sizing: border-box;
        border-radius: 10px;
        font-weight: bold;
    }

    .button1 {
        padding: 8px 10px;
        border: none;
        margin-top: 4px;
        font-family: 'Times New Roman', Times, serif;
        font-weight: bold;
        font-size: 20px;
        align-content: center;
        background-color: tomato;
        border-radius: 3px 4px;
        color: white;
        cursor: pointer;
    }
</style>
<center>
    @using (Html.BeginForm("UpdateAdminProfile", "AdminModule", FormMethod.Post))
    {

        @Html.AntiForgeryToken()

        <div class="form-horizontal">

            <h4>Edit Profile</h4>
            <hr />

            <div class="form-group" style="margin-bottom: 20px;">
                @Html.LabelFor(model => model.AdminUsername, "Enter Your Username")
                @Html.TextBoxFor(model => model.AdminUsername, new { @class = "form-control", placeholder = "Enter your username" })
                @Html.ValidationMessageFor(model => model.AdminUsername, "", new { @class = "text-danger" })
            </div>

            <div class="form-group" style="margin-bottom: 20px;">
                @Html.LabelFor(model => model.AdminPhone, "Enter Your Phone")
                @Html.TextBoxFor(model => model.AdminPhone, new { @class = "form-control", placeholder = "Enter your phone number" })
                @Html.ValidationMessageFor(model => model.AdminPhone, "", new { @class = "text-danger" })
            </div>

            <div class="form-group" style="margin-bottom: 20px;">
                @Html.LabelFor(model => model.AdminFName, "Enter Your First Name")
                @Html.TextBoxFor(model => model.AdminFName, new { @class = "form-control", placeholder = "Enter your first name" })
                @Html.ValidationMessageFor(model => model.AdminFName, "", new { @class = "text-danger" })
            </div>

            <div class="form-group" style="margin-bottom: 20px;">
                @Html.LabelFor(model => model.AdminLName, "Enter Your Last Name")
                @Html.TextBoxFor(model => model.AdminLName, new { @class = "form-control", placeholder = "Enter your last name" })
                @Html.ValidationMessageFor(model => model.AdminLName, "", new { @class = "text-danger" })
            </div>

            <div class="form-group" style="margin-bottom: 20px;">
                @Html.LabelFor(model => model.AdminPassword, "Enter Your Password")
                @Html.PasswordFor(model => model.AdminPassword, new { @class = "form-control", placeholder = "Enter your password" })
                @Html.ValidationMessageFor(model => model.AdminPassword, "", new { @class = "text-danger" })
            </div>

            <br />

            <button class="button1" type="submit">Update Profile</button>


            @*@section Scripts {
                    @Scripts.Render("~/bundles/jqueryval")
                }*@

        </div>
    }
</center>
<div class="text-right">
    @Html.ActionLink("Go back", "Index", "AdminModule", null, new { @class = "btn btn-primary" })
</div>