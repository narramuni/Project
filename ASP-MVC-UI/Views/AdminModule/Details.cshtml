@model ASP_MVC_UI.Restaurant

@{
    ViewBag.Title = "Details";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

@*   Restaurant Details   *@

<style>

    body {
        background-image: url('/Pictures/AdminLoginBgImg1.jpg');
        background-size: cover;
        background-position: center;
    }

    .details-container {
        background-color: #ffffff;
        box-shadow: 0px 0px 10px rgba(0, 0, 0, 0.1);
        padding: 20px;
        border-radius: 10px;
        margin-top: 20px;
        transition: background-color 0.3s;
        color: black;
    }

        .details-container:hover {
            background-color: #f0f0f0;
        }

    h2 {
        color: #333333;
    }

    .card {
        border: 1px solid #4c88bf;
        border-radius: 10px;
        box-shadow: 0px 0px 10px rgba(0, 0, 0, 0.1);
        color: #ffffff;
    }

    .card-title {
        color: #ffffff;
    }

    .btn-primary {
        background-color: tomato;
        border-color: tomato;
    }

        .btn-primary:hover {
            border-color: tomato;
        }
</style>

<div class="details-container">
    <h2 class="text-center mb-4" style="color: tomato;">Restaurant Details</h2>

    <div class="card">
        <div class="card-body">
            <h4 class="card-title" style="color: tomato;">Restaurant Information</h4>
            <hr />

            <dl class="row">
                <dt class="col-sm-3" style="color:black;">Restaurant ID</dt>
                <dd class="col-sm-9" style="color:black;">:          @Model.RestaurentId</dd>

                <dt class="col-sm-3" style="color:black;">Restaurant Name</dt>
                <dd class="col-sm-9" style="color:black;">:          @Model.RestaurentName</dd>

                <dt class="col-sm-3" style="color:black;">Available</dt>
                <dd class="col-sm-9" style="color:black;">:          @Html.DisplayFor(model => model.RestaurentAvailable)</dd>

                <dt class="col-sm-3" style="color:black;">Logo URL</dt>
                <dd class="col-sm-9" style="color:black;">:          @Model.RestaurentLogoUrl</dd>
            </dl>
        </div>
    </div>

    <div class="mt-4">
        @Html.ActionLink("Back to Restaurants Page", "Index", null, new { @class = "btn btn-primary" })
    </div>
</div>