@model ASP_MVC_UI.Restaurant

@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<style>

    body {
        background-image: url('/Pictures/AdminLoginBgImg1.jpg');
        background-size: cover;
        background-position: center;
    }

    .center-box {
        margin: 0 auto;
        max-width: 500px;
        padding: 20px;
        border: 1px solid #3498db;
        border-radius: 10px;
        box-shadow: 0 0 10px rgba(52, 152, 219, 0.5);
        background-color: #ecf0f1;
    }

    .form-group {
        margin-bottom: 15px;
    }

    .form-check {
        margin-top: 10px;
    }

    .btn-primary {
        background-color: tomato;
        border-color: tomato;
    }

    .btn-secondary {
        background-color: tomato;
        border-color: tomato;
        
    }

    h2.text-center {
        color: black;
        font-weight: bold;
    }

    .card-title {
        color: tomato;
    }
</style>

@{
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h2 class="text-center">Create Restaurant</h2>
<br />

<div class="center-box">
    @using (Html.BeginForm("Create", "AdminModule", FormMethod.Post, new { @class = "form-horizontal" }))
    {
        @Html.AntiForgeryToken()

        <div class="card-body">
            <h4 class="card-title">Restaurant Information</h4>
            <hr />

            @Html.ValidationSummary(true, "", new { @class = "text-danger" })

            <div class="form-group">
                @Html.LabelFor(model => model.RestaurentName, htmlAttributes: new { @class = "col-md-2 col-form-label" })
                <div class="col-md-10">
                    @Html.EditorFor(model => model.RestaurentName, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.RestaurentName, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.RestaurentAvailable, htmlAttributes: new { @class = "col-md-2 col-form-label" })
                <div class="col-md-10">
                    <div class="form-check">
                        @Html.CheckBoxFor(model => model.RestaurentAvailable, new { @class = "form-check-input" })
                        @Html.LabelFor(model => model.RestaurentAvailable, new { @class = "form-check-label" })
                        @Html.ValidationMessageFor(model => model.RestaurentAvailable, "", new { @class = "text-danger" })
                    </div>
                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.RestaurentLogoUrl, htmlAttributes: new { @class = "col-md-2 col-form-label" })
                <div class="col-md-10">
                    @Html.EditorFor(model => model.RestaurentLogoUrl, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.RestaurentLogoUrl, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                <div class="col-md-10 offset-md-2">
                    <button type="submit" class="btn btn-primary">Create</button>
                </div>
            </div>
        </div>
    }
</div>

<div class="mt-3 text-left">
    @Html.ActionLink("Back to List", "Index", null, new { @class = "btn btn-secondary" })
</div>