@model ASP_MVC_UI.Restaurant

@{
    ViewBag.Title = "Edit Restaurant";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<style>

    body {
        background-image: url('/Pictures/AdminLoginBgImg1.jpg');
        background-size: cover;
        background-position: center;
    }

    .center-box {
        margin: 0 auto;
        max-width: 500px;
        padding: 20px;
        border: 1px solid #3498db;
        border-radius: 10px;
        box-shadow: 0 0 10px rgba(52, 152, 219, 0.5);
        background-color: #ecf0f1;
    }

    .form-group {
        margin-bottom: 15px;
    }

    .form-check {
        margin-top: 10px;
    }

    .btn-primary {
        background-color: tomato;
        border-color: tomato;
    }

    .btn-secondary {
        background-color: tomato;
        border-color: tomato;
    }

    h2.text-center {
        color: black;
        font-weight: bold;
    }

    .card-title {
        color: tomato;
    }
</style>

<h2 class="text-center">Edit Restaurant</h2>

<div class="center-box">
    @using (Html.BeginForm("UpdateRestaurent", "AdminModule", FormMethod.Post))
    {
        @Html.AntiForgeryToken()

    <div class="textinbox" style="font-weight: bold;">

        <div class="form-group">
            @Html.LabelFor(model => model.RestaurentName)
            @Html.TextBoxFor(model => model.RestaurentName, new { @class = "form-control" })
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.RestaurentAvailable)
            <br />
            <center>
                @Html.CheckBoxFor(model => model.RestaurentAvailable)
            </center>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.RestaurentLogoUrl)
            @Html.TextBoxFor(model => model.RestaurentLogoUrl, new { @class = "form-control" })
        </div>

    </div>

        <button type="submit" class="btn btn-primary">Update Restaurant</button>
    }
</div>

<div class="back-button">
    @Html.ActionLink("Back to Restaurants Page", "Index", null, new { @class = "btn btn-primary" })
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}