@model ASP_MVC_UI.Customer

@{
    ViewBag.Title = "Delete";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h2>Delete</h2>

<h3>Are you sure you want to delete this?</h3>

<style>
    h2, h3 {
        color: tomato;
        text-underline-offset: auto;
        margin-left: 100px;
    }

    h4 {
        border-radius: 6px;
        margin: 0;
        padding: 10px;
        color: tomato;
    }

    body {
        background-image: url('/Pictures/ShopMoreOrGoToCartBgImg.jpg');
        background-size: cover;
        background-position: center;
    }

    .dl-horizontal {
        font-size: 15px;
        align-content: center;
        width: 600px;
        height: 550px;
        background-color: peachpuff;
        color: black;
        box-sizing: border-box;
        border-radius: 10px;
        font-weight: bold;
    }

    .form-group {
        font-weight: bold;
        font-size: 15px;
    }

    .deletet {
        padding: 8px 10px;
        border: none;
        margin-top: 4px;
        font-family: 'Times New Roman', Times, serif;
        font-weight: bold;
        font-size: 20px;
        align-content: center;
        background-color: tomato;
        border-radius: 3px 4px;
        color: white;
        cursor: pointer;
    }

    .btn-warning {
        color: #fff;
        background-color: tomato;
        border-color: tomato;
        padding: 10px 20px;
        text-decoration: none;
        display: inline-block;
        border-radius: 5px;
        transition: background-color 0.3s;
    }

        .btn-warning:hover {
            background-color: tomato;
            border-color: #d58512;
        }

    .form-actions {
        display: flex;
        justify-content: center;
        align-items: center;
        margin-top: 20px;
    }

    .btn {
        margin-right: 10px; /* Adjust the margin between buttons as needed */
    }
</style>

<center>
    <div>

        <dl class="dl-horizontal">

            <h4>Customer Details</h4>
            <hr />

            <dt>
                @Html.DisplayNameFor(model => model.CustEmail)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.CustEmail)
            </dd>

            <hr />

            <dt>
                @Html.DisplayNameFor(model => model.CustPhone)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.CustPhone)
            </dd>

            <hr />

            <dt>
                @Html.DisplayNameFor(model => model.CustFName)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.CustFName)
            </dd>

            <hr />

            <dt>
                @Html.DisplayNameFor(model => model.CustLName)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.CustLName)
            </dd>

            <hr />

            <dt>
                @Html.DisplayNameFor(model => model.CustPassword)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.CustPassword)
            </dd>

        </dl>

        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()

            <div class="form-actions no-color">
                @Html.ActionLink("Back to List", "Index", null, new { @class = "btn btn-warning" })
                <input type="submit" value="Delete" class="btn btn-danger" />
            </div>
        }
    </div>
</center>
